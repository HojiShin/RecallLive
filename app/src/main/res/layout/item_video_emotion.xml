<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#2D2D2D"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Title and Date Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/tv_video_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Video Title"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLines="1" />

            <TextView
                android:id="@+id/tv_video_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jan 1, 2025"
                android:textSize="12sp"
                android:textColor="#808080"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Top Emotion -->
        <TextView
            android:id="@+id/tv_top_emotion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ˜Š Happy"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="4dp" />

        <!-- Emotion Count -->
        <TextView
            android:id="@+id/tv_emotion_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15 emotions detected"
            android:textSize="12sp"
            android:textColor="#B0B0B0"
            android:layout_marginBottom="4dp" />

        <!-- Emotion Breakdown -->
        <TextView
            android:id="@+id/tv_emotion_breakdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ˜Š 10  ðŸ˜¢ 3  ðŸ˜² 2"
            android:textSize="14sp"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</androidx.cardview.widget.CardView>