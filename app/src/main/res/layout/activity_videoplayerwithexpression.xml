<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- Main Video View -->
    <VideoView
        android:id="@+id/video_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Camera Preview (Small, in corner) -->
    <androidx.camera.view.PreviewView
        android:id="@+id/camera_preview"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_margin="16dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Monitoring Indicator (Red dot to show monitoring is active) -->
    <ImageView
        android:id="@+id/iv_monitoring_indicator"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_margin="8dp"
        android:background="@android:drawable/presence_video_online"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/camera_preview"
        app:layout_constraintStart_toStartOf="@id/camera_preview" />

    <!-- Current Expression Display -->
    <TextView
        android:id="@+id/tv_current_expression"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="#80000000"
        android:padding="8dp"
        android:text="Analyzing..."
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/camera_preview"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Info Text (Always visible to inform user) -->
    <TextView
        android:id="@+id/tv_monitoring_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="#80000000"
        android:padding="12dp"
        android:text="ðŸ”´ Expression monitoring active\nData shared with your guardian"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>