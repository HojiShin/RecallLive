<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E"
    tools:context=".PatientSettingsFragment">

    <!-- ScrollView for Settings Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            android:paddingBottom="24dp">

            <!-- History -->
            <ImageView
                android:id="@+id/ivHistory"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_history"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                app:tint="#FFFFFF" />

            <TextView
                android:id="@+id/tvHistory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="History"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                app:layout_constraintTop_toTopOf="@id/ivHistory"
                app:layout_constraintBottom_toBottomOf="@id/ivHistory"
                app:layout_constraintStart_toEndOf="@id/ivHistory"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp" />

            <!-- Help -->
            <ImageView
                android:id="@+id/ivHelp"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_help"
                android:tint="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/ivHistory"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp" />

            <TextView
                android:id="@+id/tvHelp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Help"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                app:layout_constraintTop_toTopOf="@id/ivHelp"
                app:layout_constraintBottom_toBottomOf="@id/ivHelp"
                app:layout_constraintStart_toEndOf="@id/ivHelp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp" />

            <!-- Send Feedback -->
            <ImageView
                android:id="@+id/ivFeedback"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_feedback"
                app:layout_constraintTop_toBottomOf="@id/ivHelp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp"
                app:tint="#FFFFFF" />

            <TextView
                android:id="@+id/tvFeedback"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Send feedback"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                app:layout_constraintTop_toTopOf="@id/ivFeedback"
                app:layout_constraintBottom_toBottomOf="@id/ivFeedback"
                app:layout_constraintStart_toEndOf="@id/ivFeedback"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp" />

            <!-- Set Remind Time -->
            <ImageView
                android:id="@+id/ivRemindTime"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_hourglass"
                app:layout_constraintTop_toBottomOf="@id/ivFeedback"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp"
                app:tint="#FFFFFF" />

            <TextView
                android:id="@+id/tvRemindTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Set remind time"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                app:layout_constraintTop_toTopOf="@id/ivRemindTime"
                app:layout_constraintBottom_toBottomOf="@id/ivRemindTime"
                app:layout_constraintStart_toEndOf="@id/ivRemindTime"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp" />

            <!-- Account Info -->
            <ImageView
                android:id="@+id/ivAccountInfo"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_account"
                app:layout_constraintTop_toBottomOf="@id/ivRemindTime"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp"
                app:tint="#FFFFFF" />

            <TextView
                android:id="@+id/tvAccountInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Account info"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                app:layout_constraintTop_toTopOf="@id/ivAccountInfo"
                app:layout_constraintBottom_toBottomOf="@id/ivAccountInfo"
                app:layout_constraintStart_toEndOf="@id/ivAccountInfo"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp" />

            <!-- Log Out -->
            <ImageView
                android:id="@+id/ivLogout"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_logout"
                app:layout_constraintTop_toBottomOf="@id/ivAccountInfo"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp"
                app:tint="#FFFFFF" />

            <TextView
                android:id="@+id/tvLogout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Log out"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                app:layout_constraintTop_toTopOf="@id/ivLogout"
                app:layout_constraintBottom_toBottomOf="@id/ivLogout"
                app:layout_constraintStart_toEndOf="@id/ivLogout"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp" />

            <!-- Version Text -->
            <TextView
                android:id="@+id/tvVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="v x.xx.xx"
                android:textSize="14sp"
                android:textColor="#808080"
                app:layout_constraintTop_toBottomOf="@id/ivLogout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="48dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>